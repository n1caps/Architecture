[6]Jump 
 [12 JCC cc=1 x=0 a=20 I=0]
[7]Input=The Input stores at Memory[100]
[8]Start=The Sentence stores at Memory[300]
[9]10 //ENTER
[10]32 //SPACE
[11]Pnum=0
[12]Wnum=0
[13]j
[14]i
